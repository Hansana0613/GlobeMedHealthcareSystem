<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globemed.model.BillItem" table="bill_items">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="bill" class="com.globemed.model.Bill" column="bill_id" not-null="true" cascade="all"/>
        <property name="itemType" type="string" column="item_type" not-null="true"/>  <!-- Enum as string -->
        <property name="description" type="string" column="description"/>
        <property name="cost" type="double" column="cost" not-null="true"/>
    </class>
</hibernate-mapping>