<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globemed.model.Role" table="roles">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="name" type="string" column="name" unique="true" not-null="true"/>
        <many-to-one name="parentRole" class="com.globemed.model.Role" column="parent_role_id"/>
        <set name="permissions" table="role_permissions" cascade="all">
            <key column="role_id"/>
            <many-to-many column="permission_id" class="com.globemed.model.Permission"/>
        </set>
    </class>
</hibernate-mapping>