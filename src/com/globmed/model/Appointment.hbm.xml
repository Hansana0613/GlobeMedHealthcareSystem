<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globemed.model.Appointment" table="appointments">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="patient" class="com.globemed.model.Patient" column="patient_id" not-null="true" cascade="all"/>
        <many-to-one name="staff" class="com.globemed.model.Staff" column="staff_id" not-null="true" cascade="all"/>
        <property name="appointmentTime" type="timestamp" column="appointment_time" not-null="true"/>
        <property name="location" type="string" column="location" not-null="true"/>
        <property name="status" type="string" column="status"/>  <!-- Enum as string -->
    </class>
</hibernate-mapping>