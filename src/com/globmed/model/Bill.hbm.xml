<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globemed.model.Bill" table="bills">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="appointment" class="com.globemed.model.Appointment" column="appointment_id" not-null="true" cascade="all"/>
        <property name="totalAmount" type="double" column="total_amount" not-null="true"/>
        <property name="claimStatus" type="string" column="claim_status"/>  <!-- Enum as string -->
        <property name="insuranceDetails" type="string" column="insurance_details"/>
        <bag name="items" inverse="true" cascade="all-delete-orphan">
            <key column="bill_id"/>
            <one-to-many class="com.globemed.model.BillItem"/>
        </bag>
    </class>
</hibernate-mapping>